void init(void)
{
	glClearColor (0.0, 0.0, 0.0, 0.0);
	glOrtho(-20.0, 20.0, -10.0, 10.0, -15.0, 15.0);  ///left,right,bottom,top,near,far
}



void display(void)
{
    glClear(GL_COLOR_BUFFER_BIT);

    sky();
    sun();
    river();
    ///Cloud Position
    glPushMatrix();///1
        glTranslatef(-17,3,0);
        cloud();
    glPopMatrix();

    glPushMatrix(); ///2 move
        cloudRight=cloudRight+0.003;
        if(cloudRight>25)
        {
            cloudRight=-20;
        }
        glTranslatef(cloudRight-8,4,0);
        cloud();

        glutPostRedisplay();
    glPopMatrix();


    glPushMatrix(); ///3
        glTranslatef(0,4.5,0);
        cloud();
    glPopMatrix();

    glPushMatrix(); ///4
        glTranslatef(8,3.5,0);
        cloud();
    glPopMatrix();

    glPushMatrix(); ///5 move
        cloudLeft=cloudLeft-0.003;
        if(cloudLeft<-35)
        {
            cloudLeft=17;
        }
        glTranslatef(cloudLeft+15,4.5,0);
        cloud();

        glutPostRedisplay();
    glPopMatrix();


    ///hill and tree position
    glPushMatrix();
        glColor3f(0,0.93,0);           ///hill 1
        glTranslated(-3,0,0);
        hill(10,3);
    glPopMatrix();


     glPushMatrix();        /// mey with haat e kolsi position
        mey_balthi_x+=0.005;
        if(mey_balthi_x>33)
        {
            mey_balthi_x=-10;
        }
        glTranslatef(-5+mey_balthi_x,0,0);
        mey_with_balthi();
    glPopMatrix();


    glPushMatrix();
        glRotated(15,10,0,0);
        glTranslated(5,1,0);     ///hill 1 er pichone tree
        hill_trees();
    glPopMatrix();

    glPushMatrix();
        glTranslated(11,0,0);     ///hill 1 er pichone tree
        hill_trees();
    glPopMatrix();

    glPushMatrix();
        glColor3f(0.49,0.99,0);            /// hill 2
        glTranslated(-10.3,0,0);
        hill(10,2);
    glPopMatrix();


    glPushMatrix();
        glTranslated(19,0,0);     ///hill 1 er pichone tree
        hill_trees();
    glPopMatrix();

    glPushMatrix();
        glColor3f(0.49,0.99,0);           ///hill 3
        glTranslated(12,0,0);
        hill(9,2.7);
    glPopMatrix();





    glPushMatrix();
        glTranslated(26,0,0);     ///hill 3  er pichone tree
        hill_trees();
    glPopMatrix();



    glPushMatrix();
        glColor3f(0,0.80,0);           ///hill 4
        glTranslated(5,0,0);
        hill(7,1.7);
    glPopMatrix();


    glPushMatrix();
        glTranslated(-1,0,0);     ///hill 1  er samne tree
        hill_trees();
    glPopMatrix();

    glPushMatrix();
        glTranslated(33.5,0,0);     ///hill 5
        hill_trees();
    glPopMatrix();


    glPushMatrix();        /// mey with haat e kolsi position
        mey_x+=0.005;
        if(mey_x>33)
        {
            mey_x=-10;
        }
        glTranslatef(-15+mey_x,0,0);
        mey();
    glPopMatrix();



    fishing_side();


///Fish_position

    glPushMatrix(); ///fish_1_big_left
        x1-=0.005;
        if(x1<-19)
        {
            x1=9;
        }
        glTranslated(x1-9,-1,0);
        fishBig();
        glutPostRedisplay();
    glPopMatrix();


    glPushMatrix(); ///fish_2_big_left
        x2-=0.006;
        if(x2<-19)
        {
            x2=24;
        }
        glTranslated(x2-5,-8,0);
        fishBig();
    glPopMatrix();

   glPushMatrix(); ///fish_4_small_left
        x4-=0.009;
        if(x4<-20)
        {
            x4=18;
        }
        glTranslated(x4-10,-3,0);
        glScalef(0.5,0.5,0);
        fishSmall();
    glPopMatrix();

    glPushMatrix(); ///fish_3_big_left
        x3-=0.005;
        if(x3<-30)
        {
            x3=15;
        }
        glTranslated(x3-5,-5,0);
        fishBig();
    glPopMatrix();

    glPushMatrix(); ///fish_5_small_right
        x5+=0.003;
        if(x5>30)
        {
            x5=-11;
        }
        glTranslated(-11+x5,-7,0);
        glScalef(0.5,0.5,0);
        fishRight();
    glPopMatrix();

   glPushMatrix(); ///fish_6_big_right
        x6+=0.004;
        if(x6>30)
        {
            x6=-17;
        }
        glTranslated(x6-15,-9,0);
        glScalef(1,1,0);
        fishRight();
    glPopMatrix();


    glPushMatrix(); ///fish_7_bigger
        x7+=0.009;
        if(x7>20)
        {
            x7=-17;
        }

        glTranslated(x7-5,-3.5,0);
        glScalef(0.75,1.5,0);
        fishRight();
    glPopMatrix();
///end fish position

     glPushMatrix();     ///ship_move_with_shipMan
        shipLeft-=0.0025;
        if(shipLeft<-25)
        {
            shipLeft=20;
        }
        glTranslated(shipLeft,-9.5,0);
        ship_with_man();

        glutPostRedisplay();
    glPopMatrix();


    glPushMatrix();

        if(couple_x==0)    /// boat stop hoye jabe
        {
            glTranslatef(couple_on_ship_x+16,-2,0);
            ship_without_man();
            glutPostRedisplay();
        }

        if(couple_x==1) /// boat move korbe
        {
            couple_on_ship_x-=0.010;
            couple_move_x-=0.010;
            if(couple_on_ship_x<-23)
            {
                couple_on_ship_x=-1.2;
                couple_move_x=0;
                couple_move_y=0;
                couple_x=0;
            }
            glTranslatef(couple_on_ship_x+16,-2,0);
            ship_without_man();

            glutPostRedisplay();
        }


    glPopMatrix();


    glPushMatrix(); /// couple position
        couple();
    glPopMatrix();

    glPushMatrix();     ///fisher man position
        glTranslatef(1,-2.5,0);
        chele();
    glPopMatrix();




	glFlush();
}



void normal_key(unsigned char key, int x, int y)
{
	switch (key) {

        case 's': /// get on the ship
			couple_x=1;
			glutPostRedisplay();
			break;

	    default:
			break;
	}

}


int main()
{
	glutInitDisplayMode (GLUT_SINGLE | GLUT_RGB);
	glutInitWindowSize (1500, 800);
	glutInitWindowPosition (0,0);
	glutCreateWindow ("River Side");

	init();
	glutDisplayFunc(display);
	//glutKeyboardFunc(my_keyboard);
   // glutSpecialFunc(spe_key);
    glutKeyboardFunc(normal_key);
    //PlaySound("2ndChoice.wav", NULL, SND_FILENAME| SND_ASYNC);
	glutMainLoop();
	return 0;
}
