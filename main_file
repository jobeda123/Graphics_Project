        glColor3f(0, 0, 0.98);
        glBegin(GL_POLYGON);
            glVertex2f(0,0);
            glVertex2f(0,1.5);
            glVertex2f(1,1.5);
            glVertex2f(1,0);
        glEnd();
    glPopMatrix();

    glPushMatrix(); ///left_hand _palm
        glTranslated(0.1,0.95,0);
       glColor3f(0.882, 0.788, 0.356);
        circle(0.15,0.15);
    glPopMatrix();

    glPushMatrix(); ///leg_left
        glTranslated(-1.05,1,0);
        glColor3f(0.882, 0.788, 0.356);
        glBegin(GL_POLYGON);
            glVertex2f(0.1,-1.5);
            glVertex2f(0.3,-1.5);
            glVertex2f(0.3,-1.8);
            glVertex2f(0.1,-1.8);
        glEnd();
    glPopMatrix();





      glPushMatrix(); ///leg_right
        glTranslated(-0.35,1,0);
        glColor3f(0.882, 0.788, 0.356);
        glBegin(GL_POLYGON);
            glVertex2f(0.1,-1.5);
            glVertex2f(0.3,-1.5);
            glVertex2f(0.3,-1.8);
            glVertex2f(0.1,-1.8);
        glEnd();
    glPopMatrix();


     glPushMatrix(); ///leg_left_shoe
        glTranslated(-1.1,0.7,0);
        glColor3f(0,0,0);
        glBegin(GL_POLYGON);
            glVertex2f(0.1,-1.5);
            glVertex2f(0.4,-1.5);
            glVertex2f(0.6,-1.7);
            glVertex2f(0.1,-1.7);
        glEnd();
    glPopMatrix();


     glPushMatrix(); ///leg_right_shoe
        glTranslated(-0.4,0.7,0);
        glColor3f(0,0,0);
        glBegin(GL_POLYGON);
            glVertex2f(0.1,-1.5);
            glVertex2f(0.4,-1.5);
            glVertex2f(0.6,-1.7);
            glVertex2f(0.1,-1.7);
        glEnd();
    glPopMatrix();


 glPopMatrix();
 ///mey_end

}



void mey_with_balthi()
{

 ///mey_start
    glTranslatef(-15,2.5,0);
 glPushMatrix();

    glTranslatef(14,-1,0);
     glPushMatrix();  ///hair_long
        glTranslatef(-1,3,0);
        glColor3f(0,0,0);
        circle(0.5,0.5);
    glPopMatrix();



    glPushMatrix();   ///throat
       glColor3f(0.882, 0.788, 0.356);
        glTranslatef(-0.25,1.3,0);
        glScalef(.5,.5,0);
        glBegin(GL_QUADS);
            glVertex2d(-1,1);
